Algoritmo "DadosPessoa"
Var
   Nome, Endereco: Caractere
   Idade: Inteiro

Inicio
   Escreva("Digite o nome da pessoa: ")
   Leia(Nome)
   Escreva("Digite a idade da pessoa: ")
   Leia(Idade)
   Escreva("Digite o endereço da pessoa: ")
   Leia(Endereco)

   Escreva("Nome: ", Nome)
   Escreva("Idade: ", Idade)
   Escreva("Endereço: ", Endereco)

Fimalgoritmo
